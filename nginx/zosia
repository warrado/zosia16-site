server {
    listen 80 default_server;

    server_name zosia.org www.zosia.org;

    location / {
        include uwsgi_params;
        uwsgi_pass zosia-web:8000;
    }
}

server {
    listen 443 ssl;

    server_name zosia.org www.zosia.org;

    ssl_certificate /etc/nginx/conf.d/ssl_cert.pem;
    ssl_certificate_key /etc/nginx/conf.d/ssl_key.key;

}

# server for ELB heathcheck pings
server {
    listen 81;
    server_name _;

    add_header Content-Type text/plain;
    return 200 'healthcheck';
}